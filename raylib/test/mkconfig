CC = cc
LD = $CC

NAME = test

LOCAL = $HOME/local
BIN = $LOCAL/bin
SHARE = $LOCAL/share
MAN = $SHARE/man/

RLPATH = $LOCAL/raylib
RLPATHSRC = $RLPATH/src
RLPATHINC = $RLPATHSRC

RLINC = -I$RLPATHINC

MLIB = -lm
DLLIB = -ldl
PTLIB = -lpthread

X11LIB = -lX11
XCBLIB = -lxcb
XEXTLIB = -lXext
XAULIB = -lXau
XDMCPLIB = -lXdmcp
XLIB = $X11LIB $XCBLIB $XEXTLIB $XAULIB $XDMCPLIB

GLLIB = -lGL
GLXLIB = -lGLX
GLDPLIB = -lGLdispatch
GLIB = $GLLIB $GLXLIB $GLDPLIB

INC = $RLINC
SRC = `{ls $RLPATHSRC/*.c }
LIB = $MLIB $DLLIB $PTLIB $XLIB $GLIB

CPPFLAGS = $INC \
	-D_DEFAULT_SOURCE -DPLATFORM_DESKTOP -DGRAPHICS_API_OPENGL_33
CFLAGS = $CPPFLAGS
LDFLAGS = $LIB

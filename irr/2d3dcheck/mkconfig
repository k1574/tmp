NAME = a.out
SYSTEM = Linux
CXX = g++
LD = $CXX
STRIP = strip

LOCAL = $HOME/local

IRRPATH = $LOCAL/irrlicht
IRRPATHLIB = $IRRPATH/lib/Linux
IRRPATHINC = $IRRPATH/include

LIBSELECT =
XPATH = /usr/X11R
XPATHLIB = $XPATH/lib$LIBSELECT

IRRINC = -I$IRRPATHINC
INC = $IRRINC

X11LIB = -L$XPATHLIB -lX11
GLLIB = -lGL
XEXTLIB = -lXext
XF86LIB = -lXxf86vm
XLIB = $X11LIB $GLLIB $XEXTLIB $XF86LIB
MLIB = -lm
IRRLIB = -L$IRRPATHLIB -lIrrlicht
LIB = $MLIB $XLIB $IRRLIB

CPPFLAGS = $INC
CXXFLAGS = 
LDFLAGS = -g
